<header>
    <nav class="pre-menu">
        <div>
            <a href="/adNote/"><button type="submit" name="button_createNewNote">Create new Note</button></a>
        </div>
        <div>
            <a href="?stylechange={{#if options.changestyle}}false{{else}}true{{/if}}"><button type="submit" name="button_styleChange">Change style</button></a>
        </div>
    </nav>

    <nav class="main-menu">
        <div class="inner-main-menu">
        <a  href="?finishdate={{#if options.byfinishDate}}false{{else}}true{{/if}}"><button type="submit" name="button_byFinishDate">by finish Date</button></a>
        <a  href="?createdata={{#if options.bycreateDate}}false{{else}}true{{/if}}"><button type="submit" name="button_byCreatedDate">by created Date</button></a>
        <a  href="?importance={{#if options.byimportance}}false{{else}}true{{/if}}"> <button type="submit" name="button_byImportance">by importance</button></a>
        </div>
        <div class="inner-main-menu">
        <a  href="?finished={{#if options.showfinished}}false{{else}}true{{/if}}"><button type="submit" name="button_showFinished">show finished</button></a>
        </div>
    </nav>
</header>

<section class="entry">

  {{#if notes}}
    {{#each notes}}
        <div class="entry-content">

            <div class="entry-header">
                <div class="time-title-container">
                    <div class="time-container"><p>{{doneU}}</p></div>
                    <div class="title-container"><p>{{title}}</p></div>
                </div>
                <div class="rating-container">
                    <div class="rating-value" value="{{imp}}"></div>
                </div>

            </div>

            <div class="entry-content-container">
                <div class="entry-content-check-container">
                    <input type="checkbox" class="checkbox"><label for="checkbox">Finished</label>
                </div>
                <div class="entry-content-description-container">
                <textarea class="description">{{desc}}</textarea>
                </div>
            </div>
        </div>


        <div class="entry-button-container">
            <button type="submint" name="button_edit">Edit</button>
        </div>
    {{/each}}
  {{else}}
      <div class="emptyNotes"><p>No notes found</p></div>
  {{/if}}
</section>
